{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts",
    "src/**/*",
    "types"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      // 解决找不到模块
      "vue-echarts": [
        "node_modules/vue-echarts/"
      ],
      "vue": [
        "node_modules/*"
      ],
      "vue-router": [
        "node_modules/vue-router"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
